package com.example4.SpringBoot.LaptopController;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.example4.SpringBoot.Entities.Laptop;

@RestController
@RequestMapping("Laptop")
public class LaptopController {
	
	
	@GetMapping("{srNo}")
	public Laptop getLap(@PathVariable String srNo)
	{
		Laptop lap = new Laptop(srNo,"HP",59999);
		return lap;
	}
	/*
	 * public Laptop read() { return "Laptop object is created"; }
	 * 
	 * public String update() { return "Laptop object is updated."; }
	 * 
	 * public String delete() { return "Laptop object is deleted."; }
	 */
}
